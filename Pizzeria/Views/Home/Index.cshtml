@model Pizzeria.Models.HomeViewModel.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

@foreach (var category in Model.Categories)
{
    <h3 class="text-success">@category.Name</h3>
    <div class="row" style="padding-bottom:50px;">
        @Html.Partial("_ThumbnailAreaPartial", Model.Products.Where(u => u.Category.Name.Equals(category.Name)))
    </div>

}