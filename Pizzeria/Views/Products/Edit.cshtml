@model ProductViewModel
@using Pizzeria.Extensions
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2>Edycja Productu</h2>
<br />
<form method="post" enctype="multipart/form-data">
    <div class="form-border row">
        <input type="hidden" asp-for="Product.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Name" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.Name" class="form-control" />
                </div>
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Description" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.Description" class="form-control" />
                </div>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Price" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.Price" class="form-control" />
                </div>
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Image" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" multiple class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.CategoryId" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Product.CategoryId" id="CategoryId" asp-items="Model.Categories.ToSelectListItem(Model.Product.CategoryId)" class="form-control"></select>
                </div>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="@Model.Product.Image" width="100%" style="border-radius:5px;border:1px solid #bbb9b9;" />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
