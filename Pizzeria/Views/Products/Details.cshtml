@model ProductViewModel
@{
    ViewData["Title"] = "Details";
}

<br />
<h2>Szczegóły produktu</h2>
<br />
<div class="form-border row">
    <div class="col-8">
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Name" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Description" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.Description" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Price" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.Price" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.CategoryId" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.Category.Name" class="form-control" />
                </div>
            </div>
    </div>
    <div class="col-1"></div>
    <div class="col-3">
        <img src="@Model.Product.Image" width="100%" style="border-radius:5px;border:1px solid #bbb9b9;" />
    </div>
    <br />
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.Product.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</div>

